<Window x:Class="StringTolinecCpp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StringTolinecCpp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation ="Horizontal">
            <ComboBox x:Name="Usedg"  Width="160" Height="25"></ComboBox>
            <TextBox x:Name="NAme" Margin="5,0,0,0" TextChanged="NAme_TextChanged" Width="140"></TextBox>
        </StackPanel>
        
             
            
     
        <Grid Margin="0,25,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <RichTextBox x:Name="richTextBox" TextChanged="richTextBox_TextChanged" KeyDown="richTextBox_KeyDown" />
            <RichTextBox x:Name="richTextBox1" Grid.Column="1"/>

        </Grid>
    </Grid>
  
</Window>
